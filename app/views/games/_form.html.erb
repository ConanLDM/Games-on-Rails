<%= form_with model: @game do |f| %>
  <div class="form-group">
    <label for="title">Game Title:</label>
    <input type="text" class="form-control" id="title" name="game[title]" placeholder="Enter the game title">
  </div>

  <div class="form-group">
    <label for="description">Description:</label>
    <textarea class="form-control" id="description" name="game[description]" rows="5" placeholder="Provide a description of the game"></textarea>
  </div>

  <div class="form-group">
    <label for="review_scores">Score:</label>
    <input type="number" class="form-control" id="review_scores" name="game[review_scores]" placeholder="Enter your game review score(0-100)">
  </div>

  <div class="form-group">
    <label for="main_image">Game Image:</label>
    <input type="file" class="form-control" id="main_image" name="game[main_image]">
  </div>

  <button type="submit" class="btn btn-primary btn-lg">Create</button>
<% end %>
