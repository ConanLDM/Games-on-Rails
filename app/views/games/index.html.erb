<div class="container">
  <div class="row">
    <div class="col">
      <p style="color: blue;"><%= notice %></p>

      <h1>Games</h1>

      <div id="games">
        <% @games.each do |game| %>
          <p>
            <button class="learn-more">
            <%= render game %>
            </button>
          </p>
        <% end %>
      </div>

      <div data-controller="toggle" class="mt-5">
        <button data-action="click->toggle#fire" class="btn btn-outline-primary">
          Add a new game</button>
        <%= render partial: "form", game: @game %>
      </div>
      <%= link_to "Homepage", homepage_path %>
    </div>
  </div>

  <%== pagy_nav(@pagy) %>
</div>
